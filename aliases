# Utility aliases
alias vim="vim"
alias vi="vim"
alias vscode="/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code"

alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.vimrc"
alias gitconfig="vim ~/.gitconfig"
alias dotfiles="vim ~/.dotfiles"
alias aliases="vim ~/.dotfiles/aliases"
alias functions="vim ~/.dotfiles/functions"
alias gitignore="vim ~/.dotfiles/globalgitignore"
alias vundle="vim +PluginInstall +qall"
alias rv="vim ~/.dotfiles/chruby-version"

chpwd() {
  ls -lrthG
}

# ZSH Preventing Autocorrects
alias plugin="nocorrect plugin"

alias code="cd ~/Code"

alias fa="vscode ~/Code/freeagent"
